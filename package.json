{
  "name": "sollend-micro-protocol",
  "version": "1.0.0",
  "description": "Decentralized reputation-based micro-lending protocol on Solana",
  "license": "MIT",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "anchor build",
    "test": "anchor test",
