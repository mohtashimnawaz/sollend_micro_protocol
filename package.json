    "initialize": "ts-node scripts/initialize.ts",
    "stats": "ts-node scripts/stats.ts",
    "verify": "ts-node scripts/verify.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.3.9"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.7.3",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.2"
  }
